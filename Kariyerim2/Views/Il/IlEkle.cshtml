
@{
    ViewBag.Title = "il Ekle";
}

@using Kariyerim2.Models
@model il

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Il Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a class="btn btn-warning rounded" href="/Il/Index"> İller Sayfası </a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer" style="display: block;">
                <div class="block-content-inner">
                    <form action="/Il/IlEkle" method="post" role="form">
                        @if (Model != null)
                        {
                            <input type="hidden" name="il_kodu" value="@Model.il_kodu" />
                        }

                        <div class="form-group">
                            <label for="exampleInputEmail1">İl Adı</label>
                            @if (Model.il_adi == null)
                            {
                                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="İl adı giriniz" name="il_adi">
                            }
                            else
                            {
                                <input value="@Model.il_adi" type="text" class="form-control" id="exampleInputEmail1" placeholder="İl adı giriniz" name="il_adi">
                            }
                        </div>

                      


                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





