
@{
    ViewBag.Title = "Egitim Ekle";
}



@using Kariyerim2.Models
@model egitim

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Egitim Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a class="btn btn-warning rounded" href="/Egitim/Index"> Egitimler Sayfası </a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer" style="display: block;">
                <div class="block-content-inner">
                    <form action="/Egitim/EgitimEkle" method="post" role="form">
                        @if (Model != null)
                        {
                            <input type="hidden" name="egitim_id" value="@Model.egitim_id" />
                        }

                        <div class="form-group">
                            <label for="exampleInputEmail1">Egitim Adı</label>
                            @if (Model.egitim_adi == null)
                            {
                                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Egitim adı giriniz" name="egitim_adi">
                            }
                            else
                            {
                                <input value="@Model.egitim_adi" type="text" class="form-control" id="exampleInputEmail1" placeholder="Egitim adı giriniz" name="egitim_adi">
                            }
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Egitim Tanımı</label>
                            @if (Model.egitim_tanimi == null)
                            {
                                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Egitim tanımı giriniz" name="egitim_tanimi">
                            }
                            else
                            {
                                <input value="@Model.egitim_tanimi" type="text" class="form-control" id="exampleInputEmail1" placeholder="Egitim Tanımı giriniz" name="egitim_tanimi">
                            }
                        </div>


                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



