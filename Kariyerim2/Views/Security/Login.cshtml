@{
    ViewBag.Title = "Login";
}
@model Kariyerim2.Models.user
<body>
    <div id="content">
        <div class="container">
            @ViewBag.mesaj
            <form class="modal-content animate" action="Login" role="form" method="post">
                <div class="container">
                    <div class="form-group">
                        <label for="uname"><b>Kullanıcı adı</b></label>
                        @Html.TextBoxFor(x => x.kadi, new { @class = "form-control", placeholder = "Kullanıcı adı girin" })
                    </div>
                    <div class="form-group">
                        <label for="uname"><b>şifre</b></label>
                        @Html.PasswordFor(x => x.parola, new { @class = "form-control", placeholder = "Şifre girin" })
                    </div>
                    <button type="submit">Giriş yap</button>
                    <label>
                        <a class="btn-danger" href="/Security/KullaniciEkle">Hesabım yok</a>
                    </label>
                </div>
            </form>
        </div>
        <div class="space40"></div>
        <div class="space50"></div>
    </div>
    </div>
    <script type="text/javascript" src="/Content/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="/Content/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/Content/js/functions.js"></script>
    <script type="text/javascript" defer src="/Content/js/jquery.flexslider.js"></script>
</body>




