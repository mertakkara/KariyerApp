</nav>
                </div>
            </div>


       



</header>
    <section id="titlebar">
        <!-- Container -->
        <div class="container">

            <div class="eight columns">
                <h3 class="left">Hoş geldiniz  @HttpContext.Current.User.Identity.Name</h3>
            </div>

            <div class="eight columns">
                <nav id="breadcrumbs">
                    <ul>
                    </ul>
                </nav>
            </div>

        </div>
        <!-- Container / End -->
    </section>
    <div class="f-hr"></div>
    <div class="row space40"></div>
    <!-- Header End -->
    <!-- Content -->
    <div id="content">
        <div class="container">
            @RenderBody()
        </div>

        <div class="space40"></div>
    </div>
    </div>
