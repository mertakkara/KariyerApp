                            {
                        <li class="active"><a href="/Mesaj/Index" title=""> Mesajlar</a></li>}

                            @if (User.IsInRole("a"))
                            {
                        <li class="active">
                            <a href="components.htm" title=""><span>Yer Bilgileri</span></a>
                            <ul>
                                <!-- Submenu -->
