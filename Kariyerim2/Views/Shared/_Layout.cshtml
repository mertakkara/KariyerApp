                                <div class="form-group">
                                    <label for="exampleInputEmail1">Adınızı giriniz</label>

                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Adınızı giriniz" name="name">

                                </div>

                                <div class="form-group">
