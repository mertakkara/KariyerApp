
@{
    ViewBag.Title = "Pozisyon Ekle";
}
@using Kariyerim2.Models
@model pozisyon

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Pozisyon Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a class="btn btn-warning rounded" href="/Pozisyon/Index"> Pozisyonlar Sayfası </a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer" style="display: block;">
                <div class="block-content-inner">
                    <form action="/Pozisyon/PozisyonEkle" method="post" role="form">
                        @if (Model != null)
                        {
                            <input type="hidden" name="pozisyon_id" value="@Model.pozisyon_id" />
                        }

                        <div class="form-group">
                            <label for="exampleInputEmail1">Pozisyon Adı</label>
                            @if (Model.pozisyon_adi == null)
                            {
                                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Pozisyon adı giriniz" name="pozisyon_adi">
                            }
                            else
                            {
                                <input value="@Model.pozisyon_adi" type="text" class="form-control" id="exampleInputEmail1" placeholder="Pozisyon adı giriniz" name="pozisyon_adi">
                            }
                        </div>
                   
                        
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
